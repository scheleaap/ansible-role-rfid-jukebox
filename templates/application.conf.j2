mopidy {
  base-url = "{{ rfid_jukebox_mopidy_base_url }}"
}

reader = "{{ rfid_jukebox_reader }}"

min-read-interval = "{{ rfid_jukebox_min_read_interval }}"
max-read-interval-active-periods = "{{ rfid_jukebox_max_read_interval_active_periods }}"
max-read-interval-quiet-periods = "{{ rfid_jukebox_max_read_interval_quiet_periods }}"

spi {
  controller = {{ rfid_jukebox_spi_controller }}
  chip-select = {{ rfid_jukebox_spi_chip_select }}
  reset-gpio = {{ rfid_jukebox_spi_reset_gpio }}
}

albums {
{% for key in rfid_jukebox_albums %}
  "{{ key }}": "{{ rfid_jukebox_albums[key] }}",
{% endfor %}
}

commands {
{% for key in rfid_jukebox_commands %}
  "{{ key }}": "{{ rfid_jukebox_commands[key] }}",
{% endfor %}
}

hooks {
{% for key in rfid_jukebox_hooks %}
  {{ key }}: "{{ rfid_jukebox_hooks[key] }}",
{% endfor %}
}
